<%- include("../partials/header") %> 

<div class="container" >
	<div class="jumbotron">
		<h1>
			Edit <%=photo.name%>
		</h1>
	</div>	
	
	<form action="/photos/<%=photo._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="name"> Name </label>
			<input type="text" class="form-control" name="photo[name]" value="<%=photo.name%>">
		</div>
		<div class="form-group">
			<label for="image">Image</label>
			<input type="text" class="form-control"  name="photo[image]" value="<%=photo.image%>">
		</div>
		<div class="form-group">
			<label for="image">Description</label>
			<input type="text" class="form-control" name="photo[description]" value="<%=photo.description%>">
		</div>
		<button class="btn btn-lg btn-light btn-block">
			 Upload
		</button>
		<a class="btn btn-xs btn-light btn-block" href="/photos" role="button">Go back</a>
	</form>

</div>

<%-include("../partials/footer")%>