<%- include("../partials/header") %> 

<div class="container" >
	<div class="jumbotron">
		<h1>
			Edit your comment %>
		</h1>
	</div>	
	
	<form action="/photos/<%= photo_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="text">Comment</label>
			<input type="text" class="form-control" name="comment[text]" value="<%= comment.text%>">
		</div>
		<button class="btn btn-lg btn-light btn-block">
			 Upload
		</button>
		<a class="btn btn-xs btn-light btn-block" href="/photos" role="button">Go back</a>
	</form>

</div>

<%-include("../partials/footer")%>